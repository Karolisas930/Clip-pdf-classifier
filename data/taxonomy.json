name: Build taxonomy

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Build taxonomy.json
        run: python scripts/make_json.py

      - name: Upload artifact (taxonomy.json)
        uses: actions/upload-artifact@v4
        with:
          name: taxonomy-json
          path: data/taxonomy.json

